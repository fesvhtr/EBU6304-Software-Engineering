<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SkillInfoController">
   <children>
      <Label fx:id="title" layoutX="72.0" layoutY="48.0" text="Skill Information Management">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <JFXListView fx:id="list" layoutX="42.0" layoutY="166.0" prefHeight="400.0" prefWidth="165.0" showTooltip="true" />
      <TableView fx:id="table" layoutX="225.0" layoutY="107.0" prefHeight="518.0" prefWidth="450.0">
         <columns>
            <TableColumn fx:id="typeCol" prefWidth="200.0" text="Skill" />
            <TableColumn fx:id="sourceTypeCol" prefWidth="75.0" text="Module/Activity" />
            <TableColumn fx:id="sourceCol" prefWidth="75.0" text="Source" />
            <TableColumn fx:id="descriptionCol" prefWidth="75.0" text="Description" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <JFXButton buttonType="RAISED" layoutX="727.0" layoutY="149.0" onAction="#newSkillHandled" prefHeight="40.0" prefWidth="147.0" style="-fx-background-color: #6E7F91;" text="New Skill" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </JFXButton>

      <JFXButton buttonType="RAISED" layoutX="727.0" layoutY="231.0" onAction="#delSkillHandled" prefHeight="40.0" prefWidth="147.0" style="-fx-background-color: #6E7F91;" text="Delete Skill" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </JFXButton>

      <JFXButton buttonType="RAISED" layoutX="727.0" layoutY="310.0" onAction="#editSkillHandled" prefHeight="40.0" prefWidth="147.0" style="-fx-background-color: #6E7F91;" text="Edit Skill" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </JFXButton>

      <JFXButton layoutX="727.0" layoutY="436.0" onAction="#newTypeHandled" prefHeight="40.0" prefWidth="147.0" style="-fx-background-color: #806491;" text="New Type" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </JFXButton>

      <JFXButton layoutX="727.0" layoutY="512.0" onAction="#delTypeHandled" prefHeight="40.0" prefWidth="147.0" style="-fx-background-color: #806491;" text="Remove Type" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </JFXButton>

      <JFXTextField fx:id="newTypeField" focusColor="#806491" labelFloat="true" layoutX="730.0" layoutY="570.0" promptText="Input new skill type" visible="false" />

      <JFXButton fx:id="confirmButton" layoutX="750.0" layoutY="600.0" onAction="#confirmHandled" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #806491;" text="Confirm" textFill="WHITE" visible="false">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>

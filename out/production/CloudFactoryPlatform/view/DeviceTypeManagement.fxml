<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DeviceTypeManagementController">
    <children>
        <Label fx:id="title" layoutX="90.0" layoutY="69.0" text="Type Management">
            <font>
                <Font size="29.0" />
            </font>
        </Label>
        <JFXListView fx:id="list" layoutX="101.0" layoutY="156.0" prefHeight="400.0" prefWidth="165.0" showTooltip="true" />
        <JFXButton layoutX="327.0" layoutY="156.0" onAction="#newTypeHandled" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D80085;" text="New" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>
        <JFXButton layoutX="327.0" layoutY="253.0" onAction="#delTypeHandled" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D80085;" text="Remove" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>
        <JFXTextField fx:id="newTypeField" focusColor="#d80085" labelFloat="true" layoutX="468.0" layoutY="157.0" promptText="Input new module type name" visible="false" />
        <JFXButton fx:id="configureButton" layoutX="668.0" layoutY="156.0" onAction="#configureHandled" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D80085;" text="Confirm" textFill="WHITE" visible="false">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ActivityInfoController">
    <children>
        <Label fx:id="title" layoutX="72.0" layoutY="48.0" text="Activity Information Management">
            <font>
                <Font size="29.0" />
            </font>
        </Label>
        <JFXListView fx:id="list" layoutX="42.0" layoutY="166.0" prefHeight="400.0" prefWidth="165.0" showTooltip="true" />
        <TableView fx:id="table" layoutX="234.0" layoutY="107.0" prefHeight="518.0" prefWidth="450.0">
            <columns>
                <TableColumn fx:id="acCol" prefWidth="200.0" text="Activity" />
                <TableColumn fx:id="roleCol" prefWidth="75.0" text="Role" />
                <TableColumn fx:id="starCol" prefWidth="75.0" text="StartDate" />
                <TableColumn fx:id="endCol" prefWidth="75.0" text="EndDate" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <JFXButton layoutX="727.0" layoutY="445.0" onAction="#newTypeHandled" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #D80085;" text="New Type" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>
        <JFXButton layoutX="727.0" layoutY="523.0" onAction="#delTypeHandled" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #D80085;" text="Remove Type" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>

        <JFXButton layoutX="727.0" layoutY="149.0" onAction="#newAcHandled" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #D80085;" text="New Activity" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>

        <JFXButton layoutX="727.0" layoutY="232.0" onAction="#delActivityHandled" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #D80085;" text="Delete Activity" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>

        <JFXButton layoutX="727.0" layoutY="310.0" onAction="#editAcHandled" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #D80085;" text="Edit Activity" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>


        <JFXTextField fx:id="newTypeField" focusColor="#d80085" labelFloat="true" layoutX="468.0" layoutY="157.0" promptText="Input new module type name" visible="false" />
        <JFXButton fx:id="configureButton" layoutX="668.0" layoutY="156.0" onAction="#configureHandled" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D80085;" text="Confirm" textFill="WHITE" visible="false">
            <font>
                <Font name="Calibri" size="18.0" />
            </font>
        </JFXButton>
    </children>
</AnchorPane>
